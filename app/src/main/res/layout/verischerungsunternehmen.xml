<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/daten_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verischerungsunternehmen A"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/table_text_selector"
            android:background="#56d3f6"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/vu_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/table_text_selector" />

        <EditText
            android:id="@+id/vu_nameA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

        <TextView
            android:id="@+id/vertragsnummer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vertragsnummer"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/table_text_selector" />

        <EditText
            android:id="@+id/vertragsnummer_a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

        <TextView
            android:id="@+id/vu_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefon oder Email"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/table_text_selector" />

        <EditText
            android:id="@+id/telefon_oder_emailA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

        <TextView
            android:id="@+id/daten_fahrzeug_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verischerungsunternehmen B"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/table_text_selector"
            android:background="#56d3f6"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/vu_Name_textB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/table_text_selector" />

        <EditText
            android:id="@+id/vu_nameB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

        <TextView
            android:id="@+id/vertragsnummer_text_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vertragsnummer"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/table_text_selector" />

        <EditText
            android:id="@+id/vertragsnummerB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

        <TextView
            android:id="@+id/telefonoderemail_textB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefon oder Email"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/table_text_selector" />

        <EditText
            android:id="@+id/telefon_Oder_EmailB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:inputType="date"
            android:padding="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/input_login"
            android:textColorHint="@color/input_login_hint" />

    </LinearLayout>


</ScrollView>